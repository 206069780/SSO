<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.sso.dao.UserAndRoleDao">

    <sql id="queryKeys">
        <trim prefixOverrides=",">
            ,UUID
            ,userId
            ,roleId
            ,sort
            ,createTime
            ,updateTime
            ,createUser
            ,updateUser
        </trim>
    </sql>

    <sql id="insertConfigKeys">
        <trim prefixOverrides=",">
            <if test="UUID      !=null and UUID      !=''">,UUID</if>
            <if test="userId    !=null and userId    !=''">,userId</if>
            <if test="roleId    !=null and roleId    !=''">,roleId</if>
            <if test="sort      !=null and sort      !=''">,sort</if>
            <if test="createTime!=null and createTime!=''">,createTime</if>
            <if test="updateTime!=null ">,updateTime</if>
            <if test="createUser!=null and createUser!=''">,createUser</if>
            <if test="updateUser!=null and updateUser!=''">,updateUser</if>
        </trim>
    </sql>
    <sql id="insertConfigVals">
        <trim prefixOverrides=",">
            <if test="UUID      !=null and  UUID      !=''">,#{UUID      }</if>
            <if test="userId    !=null and  userId    !=''">,#{userId    }</if>
            <if test="roleId    !=null and  roleId    !=''">,#{roleId    }</if>
            <if test="sort      !=null and  sort      !=''">,#{sort      }</if>
            <if test="createTime!=null and  createTime!=''">,#{createTime}</if>
            <if test="updateTime!=null and  updateTime!=''">,#{updateTime}</if>
            <if test="createUser!=null and  createUser!=''">,#{createUser}</if>
            <if test="updateUser!=null and  updateUser!=''">,#{updateUser}</if>
        </trim>
    </sql>

    <sql id="UpdateConfig">
        <set>
            <trim prefixOverrides=",">
                <if test="UUID      !=null and UUID      !=''">,UUID =#{UUID      }</if>
                <if test="userId    !=null and userId    !=''">,userId =#{userId    }</if>
                <if test="roleId    !=null and roleId    !=''">,roleId =#{roleId    }</if>
                <if test="sort      !=null and sort      !=''">,sort =#{sort      }</if>
                <if test="createTime!=null and createTime!=''">,createTime=#{createTime}</if>
                <if test="updateTime!=null ">,updateTime=#{updateTime}</if>
                <if test="createUser!=null and createUser!=''">,createUser=#{createUser}</if>
                <if test="updateUser!=null and updateUser!=''">,updateUser=#{updateUser}</if>
            </trim>
        </set>
    </sql>

    <sql id="WhereConfig">
        <where>
            <trim prefixOverrides="and">
                <if test="UUID      !=null and UUID      !=''">and UUID =#{UUID      }</if>
                <if test="userId    !=null and userId    !=''">and userId =#{userId    }</if>
                <if test="roleId    !=null and roleId    !=''">and roleId =#{roleId    }</if>
                <if test="sort      !=null and sort      !=''">and sort =#{sort      }</if>
                <if test="createTime!=null and createTime!=''">and createTime=#{createTime}</if>
                <if test="updateTime!=null ">and updateTime=#{updateTime}</if>
                <if test="createUser!=null and createUser!=''">and createUser=#{createUser}</if>
                <if test="updateUser!=null and updateUser!=''">and updateUser=#{updateUser}</if>
            </trim>
        </where>
    </sql>

    <select id="queryById" resultType="com.blog.sso.entity.UserAndRole">
        select
        <include refid="queryKeys"/>
        from user_role where UUID =#{UUID}
    </select>

    <select id="query" parameterType="com.blog.sso.entity.UserAndRole">
        select
        <include refid="queryKeys"/>
        from user_role
        <include refid="WhereConfig"/>
    </select>


    <update id="edit" parameterType="com.blog.sso.entity.UserAndRole">
        update user_role
        <include refid="UpdateConfig"/>
        where UUID = #{UUID}
    </update>

    <insert id="insert">
        insert into user_role(<include refid="insertConfigKeys"></include>)
        value(<include refid="insertConfigVals"/>)
    </insert>

    <delete id="deleteById">
        delete
        from user_role
        where UUID = #{UUID}
    </delete>
    <select id="queryByName">
    </select>
    <delete id="delete">
        delete
        from user_role
        <include refid="WhereConfig"/>
    </delete>
</mapper>